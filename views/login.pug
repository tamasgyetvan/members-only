extends layout 

block content 

    h1 Login
    form#loginform(method="POST" action="")

        label(for="username") Username:
        input#username(type="text", name="username" value=((user != null) ? user.username : ""))

        label(for="password") Password:
        input#password(type="password", name="password")

        button#registerBtn Log in
    

    if errors
        ul
            for error in errors
                li!= error.msg