extends layout 

block content 

    h1 Sign up
    form#signupform(method="POST" action="")

        label(for="username") Username:
        input#username(type="text", name="username" value=((user != null) ? user.username : ""))

        label(for="password") Password:
        input#password(type="password", name="password")

        label(for="confirmPassword") Confirm Password:
        input#confirmPassword(type="password", name="confirmPassword")

        label(for="firstname") First Name:
        input#firstname(type="text", name="firstname" value=((user != null) ? user.firstname : ""))

        label(for="lastname") Last name:
        input#lastname(type="text", name="lastname" value=((user != null) ? user.lastname : ""))

        button#registerBtn Register
    
    a(href="/") Go back
    if errors
        ul
            for error in errors
                li!= error.msg